<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addtask"
    android:background="#64FFDA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/defaultview">


    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:paddingStart="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/notes" />

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:text="Add Task"
        android:textSize="40sp"
        android:layout_alignEnd="@id/photo_image_view"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/defaultview"
        android:layout_alignBottom="@id/defaultbuttonbelow"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="100dp">
        <EditText
            android:id="@+id/titleofnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textColorHint="#000000"
            android:inputType="textAutoComplete"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="0dp"/>
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content"
            android:textColorHint="#000000"
            android:inputType="textMultiLine"
            android:lines="4"
            android:minLines="2"
            android:gravity="top|left"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/defaultbuttonbelow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp">

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save Note"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:background="#000000"
            />
    </LinearLayout>

</RelativeLayout>